@model List<Product>

@{
    ViewData["Title"] = "ProductsList";
}

<h1>ProductsList</h1>

<div class=".col-md-12">
    @foreach (Product item in Model)
    {
    <div class=".col-md-4 justify-content-center">
        <div class="row justify-content-center">
            <img src="@item.ImgUrl" />
        </div>
        <div class="row justify-content-center">
            <p class="small">Title:@item.Title</p>
        </div>
        <div class="row justify-content-center">
            <p class="small">Franchize:@item.Franchize</p>
        </div>
        <div class="row justify-content-center">
            <p class="small">Description:@item.Desctiption</p>
        </div>
    </div>
    }
</div>