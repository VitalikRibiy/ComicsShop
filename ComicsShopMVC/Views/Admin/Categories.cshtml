@model IEnumerable<CategoryDto>

@{
    ViewBag.Title = "Категорії";
}

<div class="handler padding">
    <ul class="list-inline">
        <li class="list-inline-item handler-item">
            <a asp-controller="Admin" asp-action="Books" class="btn">Comics</a>
        </li>
        <li class="list-inline-item handler-item">
            <a asp-controller="Admin" asp-action="Authors" class="btn">Authors</a>
        </li>
        <li class="list-inline-item handler-item">
            <a asp-controller="Admin" asp-action="Categories" class="btn">Categories</a>
        </li>
        <li class="list-inline-item handler-item">
            <a asp-controller="Admin" asp-action="Customers" class="btn">Clients</a>
        </li>
        <li class="list-inline-item handler-item">
            <a asp-controller="Admin" asp-action="Orders" class="btn">Orders</a>
        </li>
        <li class="list-inline-item handler-item">
            <a asp-controller="Admin" asp-action="Notices" class="btn">Messages</a>
        </li>
    </ul>
</div>
<div>
    <h1>Категорії</h1>
    <a class="btn btn-danger mb-3" asp-action="Create"
       asp-controller="category">Add new category</a>
    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Категорія</th>
                    <th scope="col">Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <th>@category.Id</th>
                        <td>@category.Name</td>
                        <td>
                            <form asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" method="post">
                                <button type="submit" class="btn btn-danger m-1"
                                        onclick="return confirm('Are tou sure you want to delete category: @category.Name?')">
                                    Delete
                                </button>

                            </form>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    }
    else
    {
        <p>You have no books yet.</p>
    }
</div>