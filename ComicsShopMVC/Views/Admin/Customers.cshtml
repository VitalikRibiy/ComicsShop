@model IEnumerable<Customer>

@{
    ViewBag.Title = "Clients";
}

<div class="handler padding">
    <ul class="list-inline">
        <li class="list-inline-item handler-item">
            <a asp-controller="Admin" asp-action="Books" class="btn">Comics</a>
        </li>
        <li class="list-inline-item handler-item">
            <a asp-controller="Admin" asp-action="Authors" class="btn">Authors</a>
        </li>
        <li class="list-inline-item handler-item">
            <a asp-controller="Admin" asp-action="Categories" class="btn">Category</a>
        </li>
        <li class="list-inline-item handler-item">
            <a asp-controller="Admin" asp-action="Customers" class="btn">Clients</a>
        </li>
        <li class="list-inline-item handler-item">
            <a asp-controller="Admin" asp-action="Orders" class="btn">Orders</a>
        </li>
        <li class="list-inline-item handler-item">
            <a asp-controller="Admin" asp-action="Notices" class="btn">Message</a>
        </li>
    </ul>
</div>
<div>
    <h1>CLients</h1>
    @if (Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <th>@customer.Id</th>
                        <td>@customer.UserName</td>
                        <td>@customer.Email</td>
                        <td>
                            <form asp-controller="Admin" asp-action="DeleteCustomer" asp-route-id="@customer.Id" method="post">
                                <button type="submit" class="btn btn-danger m-1"
                                        onclick="return confirm('Are tou sure you want to delete client: @customer.UserName?')">
                                    Видалити
                                </button>

                            </form>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    }
    else
    {
        <p>You have no books yet.</p>
    }
</div>